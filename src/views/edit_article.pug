extend layout
block content
    h2 #{title}
    form(action="/article/edit/" + article._id , method="post")
        .form-group
            label(for="title") Title
            input.form-control(name="title" type="text" value=article.title)
        .form-group
            label(for="author") Author
            input.form-control(name="author" type="text" value=article.author)
        .form-group
            label(for="body") Body
            textarea.form-control(name="body")= article.body
        .form-group
            input.btn.btn-primary(type="submit" value="Edit Article")
